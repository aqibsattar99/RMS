@model IEnumerable<RMS.Models.TasksVM>
<style>
    .box {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
      transition: transform 0.3s ease;
    }

    .box:hover {
      transform: translateY(-10px);
      background-color: #e9ecef;
    }

    .box i {
      font-size: 40px;
      color: #007bff;
      margin-bottom: 15px;
    }

    .box h5 {
      font-weight: 600;
    }



    .box p {
      color: #6c757d;
    }
  </style>


<div class="container mt-2">
    <div class="row g-4">
        <div class="col-md-12">
         
            <h4>Dashboard</h4>
            


            </div>
    <div class="col-md-4">
      <div class="box shadow">
     
        <h5>Total Branches</h5>
                <p>@ViewBag.Branches</p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="box shadow">
      
        <h5>Total Equipment Types</h5>
                <p>@ViewBag.Eqpttypes</p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="box shadow">
       
      <h5> Pending Tasks </h5>
                <p>@ViewBag.PTasks</p>
      </div>
    </div>

  
  </div>




</div>



<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h4>Pending Tasks</h4>
       
    </div>

    <!-- Dropdown filters -->
    <div class="row mb-3">
        <div class="col-md-3">
            <select id="FilterBranchHome" class="form-control">
                <option value="">Select Branch</option>
                @foreach (var b in ViewBag.Branch)
                {
                    <option value="@b.Name">@b.Name</option>
                }
            </select>
        </div>

       

    </div>




    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered table-hover" id="tbltaskshome">
            <thead class="table-dark">
                <tr>
                    <th>Sr</th>
                    <th>Branch</th>
                    <th>Repair Equipment</th>
                    <th>ION No.</th>
                    <th>Date</th>
                    <th>Problem/Error</th>
                    <th>Status</th>

                    
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                }
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <!-- Display Branch name -->
                        <td>@Html.DisplayFor(modelItem => item.Branch)</td>

                        <!-- Display Equipment repair details -->
                        <td>@Html.DisplayFor(modelItem => item.Eqptrepair)</td>

                        <!-- Display Assigned user name -->
                        <td>@Html.DisplayFor(modelItem => item.Ionno)</td>

                        <!-- Display formatted completion date -->

                        <td>@item.Assigndate</td>

                        <!-- Display the problem description -->
                        <td>@Html.DisplayFor(modelItem => item.Problem)</td>

                        <!-- Display task status: Pending or Completed -->
                        <td>
                            @if (item.Status == false)
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                        </td>

                       
                    </tr>
                }
            </tbody>

        </table>
    </div>


</div>
