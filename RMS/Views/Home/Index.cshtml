<style>
    .box {
      background-color: #fff;
      padding: 20px;
      border-radius: 8px;
      text-align: center;
      transition: transform 0.3s ease;
    }

    .box:hover {
      transform: translateY(-10px);
      background-color: #e9ecef;
    }

    .box i {
      font-size: 40px;
      color: #007bff;
      margin-bottom: 15px;
    }

    .box h5 {
      font-weight: 600;
    }



    .box p {
      color: #6c757d;
    }
  </style>


<div class="container mt-2">
    <div class="row g-4">
        <div class="col-md-12">
         
            <h4>Dashboard</h4>
            


            </div>
    <div class="col-md-4">
      <div class="box shadow">
        <i class="fas fa-cogs"></i>
        <h5>Total Branches</h5>
                <p>@ViewBag.Branches</p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="box shadow">
        <i class="fas fa-chart-line"></i>
        <h5>Issued Equipment</h5>
                <p>@ViewBag.Eqpt</p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="box shadow">
        <i class="fas fa-user-friends"></i>
      <h5> Equiptment Stored</h5>
                <p>@ViewBag.Eqptstore</p>
      </div>
    </div>

  
  </div>




</div>



<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h4>Pending Tasks</h4>
       
    </div>
    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered table-hover" id="tbltasks">
            <thead class="table-dark">
                <tr>
                    <th>Sr</th>
                    <th>Branch</th>
                    <th>Repair Equipment</th>
                    <th>Assigned</th>
                    <th>Completion Date</th>
                    <th>Problem/Error</th>
                    <th>Status</th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                    var tasks = ViewBag.Tasks as List<RMS.Models.Tasks>; // Cast ViewBag.Tasks to the appropriate type
                }

                @foreach (var item in tasks)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.Branch.name</td> <!-- Access Branch name directly -->
                        <td>@item.eqptrepair</td>
                        <td>@item.assigned</td>
                        <td>@item.completiondate?.ToString("MMM-dd-yyyy")</td>
                        <td>@item.problem</td>
                        <td>
                            @if (item.status == false)
                            {
                                <span>Pending</span>
                            }
                            else
                            {
                                <span>Completed</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-info btn-sm"  href="/tasks/edit/@item.Id">Edit</a>
                        </td>
                    </tr>
                }
            
            
            
            </tbody>
        </table>
    </div>
</div>
