@model IEnumerable<RMS.Models.Tasks>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Task List</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
    <div class="table-responsive mt-3"> 
        <table class="table table-striped table-bordered table-hover" id="tbltasks">
            <thead class="table-dark">
                <tr>
                    <th>Sr</th>
                    <th>Branch</th>
                    <th>Repair Equipment</th>
                    <th>Assigned</th>
                    <th>Completion Date</th>
                    <th>Problem/Error</th>
                    <th>Status</th>
                
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                }
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@Html.DisplayFor(modelItem => item.Branch.name)</td>
                        <td>@Html.DisplayFor(modelItem => item.eqptrepair)</td>
                        <td>@Html.DisplayFor(modelItem => item.assigned)</td>
                        <td>@item.completiondate?.ToString("MMM-dd-yyyy")</td>

                        <td>@Html.DisplayFor(modelItem => item.problem)</td>
                        <td>
                            @if (item.status == false)
                            {
                                <span>Pending</span>
                            }
                            else
                            {
                                <span>Completed</span>
                            }
                        </td>
                        <td>
                            @if (item.status == false)
                            {
                                <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                            }

                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
