@model RMS.Models.Tasks

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create New Task</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label for="branchid" class="form-label">Branch</label>
                            <select class="form-control" id="branchid" name="branchid">
                                @foreach (var B in ViewBag.Branch)
                                {
                                    <option value="@B.Id">@B.name</option>
                                }
                            </select>
                        </div>


                        <div class="mb-3">
                            <label asp-for="eqptrepair" class="form-label">Equipment Repair</label>
                            <input asp-for="eqptrepair" class="form-control" />
                            <span asp-validation-for="eqptrepair" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="assigned" class="form-label">Assigned To</label>
                            <input asp-for="assigned" class="form-control" />
                            <span asp-validation-for="assigned" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="completiondate" class="form-label">Completion Date</label>
                            <input asp-for="completiondate" class="form-control" />
                            <span asp-validation-for="completiondate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="problem" class="form-label">Problem Description</label>
                            <input asp-for="problem" class="form-control" />
                            <span asp-validation-for="problem" class="text-danger"></span>
                        </div>

                    

                        <div class="d-grid">
                            <div class="row">
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary" style="width:100%;">Create</button>
                                </div>
                                <div class="col-sm-6">
                                    <a href="/Tasks" class="btn btn-success" style="width:100%;">Back</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
