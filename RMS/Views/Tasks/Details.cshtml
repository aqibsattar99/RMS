@model RMS.Models.TasksVM

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4>Task Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">
                    <label>Branch Name</label>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Branch)
                </dd>

                <hr/>

                <dt class="col-sm-3 fw-bold">
                    <label>Eqpt Repair</label>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Eqptrepair)
                </dd>

                <hr />


                <dt class="col-sm-3 fw-bold">
                    <label>Date Recevied</label>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Assigndate)
                </dd>

                <hr />

            

                <dt class="col-sm-3 fw-bold">
                    <label>Problem/Error </label>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Problem)
                </dd>

                <hr />


                <dt class="col-sm-3 fw-bold">
                    <label>Status </label>
                </dt>
                <dd class="col-sm-9">
                    @if(Model.Status == true)
                    {
                        <span>Completed</span>
                    }
                  
                </dd>

                <hr />


                <dt class="col-sm-3 fw-bold">
                    <label>Completetion Date</label>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Completiondate)
                </dd>

                <hr />


                <dt class="col-sm-3 fw-bold">
                    <label>Remarks </label>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Remarks)

                </dd>

            </dl>
        </div>
    </div>
    <div class="mt-3">
      
        <a class="btn btn-secondary" asp-action="Index">
            Back 
        </a>
    </div>
</div>
