@model IEnumerable<RMS.Models.EqptissueVM>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Issued Equipments</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
          
                <tr>
                    <th>Date</th>
                    <th>Branch</th>
                    <th>Equipment</th>
                    <th>Quantity</th>
                    <th>Remarks</th>
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.date?.ToString("yyyy-MM-dd")</td>
                       <td>@item.branch</td>
                        <td>@item.eqpt</td> 
                        <td>@item.qty</td>
                        <td>@item.remarks</td>
                        <td>@(item.active.HasValue && item.active.Value ? "Yes" : "No")</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.id">Edit</a> 
                           @*  <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.id">Details</a> | *@
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
    </div>