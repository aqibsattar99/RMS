@model IEnumerable<RMS.Models.EqptstoreVM>


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Stored Equipments</h2>
       @*  <a asp-action="Create" class="btn btn-primary">Create New</a> *@
    </div>
    <div class="table-responsive mt-3">
        <table class="table table-striped table-bordered table-hover" id="tbleqptstore">
            <thead class="table-dark">
          
                <tr>
                    <th>
                        Sr
                    </th>
                    <th>Date</th>
              
                    <th>Equipment</th>
                    <th>Quantity</th>
                
                
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    var i = 0;
                }
                @foreach (var item in Model)
                {
                    i++;
                    <tr>
                        <td>
                            @i
                        </td>
                        <td>@item.Date?.ToString("yyyy-MM-dd")</td>
                     
                        <td>@item.Eqptname</td> 
                        <td>@item.Qty</td>
                      
                     
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                           @*  <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@item.id">Details</a> | *@
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
    </div>

