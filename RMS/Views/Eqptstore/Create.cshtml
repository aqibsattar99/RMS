@model RMS.Models.Eqptstore

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Store New Equipment</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="date" class="form-label">Date</label>
                            <input asp-for="date" class="form-control" />
                            <span asp-validation-for="date" class="text-danger"></span>
                        </div>

                     

                        <div class="mb-3">
                            <label for="EqptnameId" class="form-label">Equipment</label>
                            <select class="form-control" id="eqptid" name="eqptid">
                                @foreach (var E in ViewBag.Eqpt)
                                {
                                    <option value="@E.Id">@E.name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="qty" class="form-label">Quantity</label>
                            <input asp-for="qty" class="form-control" />
                            <span asp-validation-for="qty" class="text-danger"></span>
                        </div>

                     

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
